<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="android:windowFullscreen">true</item> <!-- hide notification area-->
        <!--<item name="windowNoTitle">true</item> <!- hide application name--> -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <style name="text_box_style">
        <item name="android:background">@drawable/text_box</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
       <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">20dp</item>


    </style>

    <style name="btnStyle">
        <item name="android:background">@drawable/btn_draw</item>
        <item name="android:textColor">@color/navy</item>
        <item name="android:padding">10dp</item>

    </style>




</resources>
