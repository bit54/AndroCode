<?xml version="1.0" encoding="utf-8"?>
<shape android:shape="rectangle" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- tags used inside the shape tag
    <corners/>
    <gradient/>
    <padding/>
    <size/>
    <solid/>
    <stroke/>
    -->
    <stroke android:color="@color/silver"
        android:width="2dp"
        />
    <padding android:bottom="10dp" android:top="10dp" android:left="20dp" android:right="20dp"/>
    <solid android:color="@color/black"/>
    <corners android:radius="20dp" />
    <gradient android:startColor="@color/Blue"
        android:endColor="@color/lime"

        />
</shape>
